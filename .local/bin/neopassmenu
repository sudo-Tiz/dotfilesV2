#!/usr/bin/env bash

shopt -s nullglob globstar

typeit=0
if [[ $1 == "--type" ]]; then
        typeit=1
        shift
fi

if [[ -n $WAYLAND_DISPLAY ]]; then
        dmenu=dmenu
        xdotool="ydotool type --file -"
        xclip="wl-copy"
        # TODO:
        clipOFF="" # killall wl-paste
        clipON="" # setsid wl-paste --type text --watch cliphist store
elif [[ -n $DISPLAY ]]; then
        dmenu=dmenu
        xdotool="xdotool type --clearmodifiers --file -"
        xclip="xclip -r -selection clipboard"
        clipOFF="clipctl disable"
        clipON="clipctl enable"
else
        echo "Error: No Wayland or X11 display detected" >&2
        exit 1
fi

prefix=${PASSWORD_STORE_DIR-~/.password-store}
password_files=( "$prefix"/**/*.gpg )
password_files=( "${password_files[@]#"$prefix"/}" )
password_files=( "${password_files[@]%.gpg}" )

password=$(printf '%s\n' "${password_files[@]}" | "$dmenu" "$@")

pw() {
  $clipOFF
  if output=$(pass "$1" | grep -oP 'login: \K.*'); then
    echo "$output" | $xclip
    notify-send "passmenu" "login copied"
    sleep 3
  fi
	pass -c "$1" 2>/dev/null && notify-send "passmenu" "password copied" &&	sleep 5
	pass otp -c "$1" 2>/dev/null && notify-send "passmenu" "otp copied" 
  $clipON
}


[[ -n $password ]] || exit

if [[ $typeit -eq 0 ]]; then
	pw "$password"
        #pass show -c "$password" 2>/dev/null
else
        pass show "$password" | { IFS= read -r pass; printf %s "$pass"; } | $xdotool
fi
