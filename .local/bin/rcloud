#!/bin/sh

pgrep -f "rclone --vfs-cache-mode writes mount tizcloud:/Desk " || setsid rclone --vfs-cache-mode writes mount "tizcloud":/Desk ~/cloud &
pgrep -f "rclone --vfs-cache-mode writes mount tizcloud:/Documents" || setsid rclone --vfs-cache-mode writes mount "tizcloud":/Documents ~/documents &
pgrep -f "rclone --vfs-cache-mode writes mount tizcloud:/Images" || setsid rclone --vfs-cache-mode writes mount "tizcloud":/Images ~/images &
pgrep -f "rclone --vfs-cache-mode writes mount tizcloud:/Notes" || setsid rclone --vfs-cache-mode writes mount "tizcloud":/Notes ~/notes &
